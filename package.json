{
  "name": "lms",
  "version": "1.0.0",
  "description": "LM Studio SDK",
  "main": "index.js",
  "scripts": {
    "start": "node ./starter.mjs",
    "watch-tsc": "tsc --build tsconfig.build.json --watch",
    "watch-jest": "jest --watch --testMatch **/?(*.)+(test).ts",
    "watch-ui-css": "cd packages/lms-ui && npm run watch-css",
    "clean": "shx rm -rf ./packages/**/dist ./packages/**/tsconfig.tsbuildinfo ./publish/**/dist ./publish/**/ts-out",
    "build-sdk": "cd publish/sdk && npm run build",
    "build-cli": "cd publish/cli && npm run build",
    "build": "npm run clean && tsc --build tsconfig.build.json && npm run build-sdk && npm run build-cli",
    "make-cli": "cd publish/cli && npm run make",
    "make": "npm run clean && tsc --build tsconfig.build.json && npm run build-sdk && npm run make-cli",
    "publish": "npm run build && lerna publish",
    "publish-sdk": "cd publish/sdk && npm publish",
    "manual-testing": "cd ./packages/lms-sdk-manual-testing/dist && node index.js"
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.40.1",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "autoprefixer": "^10.4.17",
    "bundle-declarations-webpack-plugin": "^5.0.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "inquirer": "^9.2.14",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "parcel": "^2.11.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "process": "^0.11.10",
    "shx": "^0.3.4",
    "stmux": "^1.8.7",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.2",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "node-pty": "npm:@homebridge/node-pty-prebuilt-multiarch"
  },
  "workspaces": [
    "packages/*",
    "publish/*",
    "examples/*"
  ]
}
